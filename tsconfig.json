{
  "compilerOptions": {
    "target": "ES2020", // Modern JavaScript output
    "module": "CommonJS", // Required for Node.js
    "rootDir": "./src", // Where TypeScript source files live
    "outDir": "./dist", // Where compiled JavaScript goes
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Allows default imports from CommonJS
    "forceConsistentCasingInFileNames": true, // Avoid case mismatches
    "skipLibCheck": true // Skip type checks on dependencies
  },
  "include": ["src"], // Only compile files in src/
  "exclude": ["node_modules"] // Don't compile dependencies
}
